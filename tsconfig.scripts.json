{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "scripts/**/*.ts",
        "src/**/*.ts"
    ]
}